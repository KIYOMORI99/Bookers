
<div class="col-xs-3">
    <%= render :partial => "layouts/sidebar" %>
</div>

<div class="col-xs-9">
    <h1>Book detail</h1>
    <table class="table table-hover">
        <tr>
            <td><%= link_to user_path(@user.id) do %><%= attachment_image_tag @user, :profile_image,  size: "30x30", format: 'jpeg', fallback: "no_image.jpg" %><br><%= @user.name %><% end %></td>
            <td><%= @post_books.title %></td>
            <td><%= @post_books.opinion %></td>
            <% if @post_books.user.id == current_user.id %>
            <td><%= link_to edit_post_book_path(@post_books.id), :class=> "btn btn-success" do %>edit<% end %></td>
            <td><%= link_to "Destroy", post_book_path(@post_books), method: :delete , :class=> "btn btn-danger"%></td>
            <% end %>
        </tr>
    </table>
</div>
