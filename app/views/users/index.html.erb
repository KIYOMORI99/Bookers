
<div class="col-xs-3">
    <%= render :partial => "layouts/sidebar" %>
</div>
<div class="col-xs-9">
    <h1>Users</h1>
    <table class="table table-hover">
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th></th>
        </tr>
        <% @users.each do|user| %>
        <tr>
            <td><%= attachment_image_tag user, :profile_image,  size: "30x30", format: 'jpeg', fallback: "no_image.jpg" %></td>
            <td><%= user.name %></td>
            <td><%= link_to 'show', user_path(user.id) %></td>
        </tr>
        <% end %>
    </table>
</div>

